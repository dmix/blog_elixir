      /- title = "Warnings from the past"
      = link title, 
             to: Routes.post_path(@conn, :show, @post.permalink),
             title: @post.title,
             rel: "bookmark",
             class: "title b link black-80 f1"

  .blog-post__sublinks.f6.ttu
